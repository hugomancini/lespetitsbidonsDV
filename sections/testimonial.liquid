{% comment %}
** Testimonial - homepage partial **
- Draggable section
- Uses blocks
{% endcomment %}

{% if section.settings.wide_display == false %}
<div class="container">
  <div class="sixteen columns">
{% endif %}
    <h3 class="desktop headline">{{section.settings.principal_title}}</h3>
{% if section.blocks.size > 0 %}
  <div  id="testimonial-{{section.id}}"
        class="testimonial-slideshow
        js-testimonial
        {% comment %}{% if section.settings.testimonial_text_animation != '' %}text-animation--true{% endif %}{% endcomment %}
        transparentBackground--{{settings.slideshow_button_style}}
        full-width--{{ section.settings.wide_display }}"
        data-slider-id="testimonial-{{section.id}}"
        data-slideshow-speed="{{section.settings.testimonial_speed}}"
        {% comment %}data-slideshow-text-animation="{{section.settings.testimonial_text_animation}}"{% endcomment %}
        >


    {% for block in section.blocks %}
        <div class="testimonial-block gallery-cell slide-{{ forloop.index }} {% if block.settings.image == nil %}set-static use-mobile-color{% endif %}" {{ block.shopify_attributes }} data-block-id="{{block.id}}">
            {% assign image = block.settings.image %}
            {% if image != nil %}
                {% include 'image-element', image: image, alt: image.alt, stretch_width: true, additional_classes: 'testimonial-image' %}
              {% if block.settings.darken_bg %}<div class="darken-bg"></div>{% endif %}
            {% endif %}
            <div class="caption position-{{block.settings.text_position}} js-caption">
                <div class="caption-content testimonial-text {% if image != nil %}testimonial-text-mobile{% endif %} align-{{block.settings.text_align}}">
                  {% if block.settings.name != blank %}
                    <p class="first_name">{{ block.settings.name }}</p><br>
                  {% endif %}
                  {% if block.settings.title != blank %}
                    <p class="headline">
                      {{ block.settings.title }}
                    </p>
                    <div class="feature_divider"></div>
                  {% endif %}
                  <div class="subtitle">
                    {{ block.settings.testimonial }}
                    <p>
                      {% if block.settings.stars == true %}
                        <div class="stars">
                          {% for index in (1..block.settings.stars_nb) %}
                            <i class="fas fa-star green"></i>
                          {% endfor %}
                        </div>

                      {% endif %}


                      {% if block.settings.store_name != blank %}
                        {% if block.settings.link != blank %}<a href="{{ block.settings.link }}">{% endif %}
                          <strong>{{ block.settings.store_name }}</strong>
                        {% if block.settings.link != blank %}</a>{% endif %}
                      {% endif %}
                    </p>
                  </div>
                </div>
              </div>

        </div>
    {% endfor %}
  </div>
{% endif %}
  <div class="center-cont ">
    <a href="{{section.settings.testi_button_link}}" class="action_button first_button white-button highlight-true center-tr">{{section.settings.button_label}}</a>
  </div>
{% if section.settings.wide_display == false %}
  </div>
</div>
{% endif %}

{% schema %}

{
  "name": "Testimonials",
  "class": "testimonial-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "wide_display",
      "label": "Wide display",
      "default": true
    },

    {
      "type": "text",
      "id": "principal_title",
      "label": "Heading",
      "default": "AVIS CLIENTS"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "AVIS CLIENTS"
    },
    {
      "type": "url",
      "id": "testi_button_link",
      "label": "button link"
    },
    {
      "type": "range",
      "id": "testimonial_speed",
      "label": "Change testimonials every",
      "min": 0,
      "max": 12,
      "step": 1,
      "default": 6,
      "unit": "sec"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "TITRE"
        },
        {
          "type": "richtext",
          "id": "testimonial",
          "label": "Testimonial",
          "default": "<p>Include some of your favorite customer quotes and feedback here as social proof, to build credibility and trust for your services and products.</p>"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Customer name",
          "default": "titre"
        },
        {
          "type": "text",
          "id": "store_name",
          "label": "Store name"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Store link"
        },
        {
          "type": "select",
          "id": "text_position",
          "label": "Text position",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "center"
        },
        {
          "type": "select",
          "id": "text_align",
          "label": "Text alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "center"
        },
        {
          "type": "header",
          "content": "Background image"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "1600 x 1000px recommended"
        },
        {
          "type": "checkbox",
          "id": "darken_bg",
          "label": "Darken background image"
        },
        {
          "type": "checkbox",
          "id": "stars",
          "label": "Display rating stars"
        },
        {
          "type": "range",
          "id": "stars_nb",
          "label": "Display rating stars",
          "min": 0,
          "max": 5,
          "step": 1,
          "default": 5,
          "unit": "str"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "category": "Text",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}

{% endschema %}
