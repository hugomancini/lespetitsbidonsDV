  "name": "Scroll Time Line",
  "class": "scroll-time-line-section",
  "max_blocks": 5,
  "settings": [
    {
      "type": "range",
      "id": "duration",
      "label": "Duration",
      "info": "How long to scroll to get next div",
      "min": 500,
      "max": 5000,
      "default": 1000,
      "step": 500,
      "unit": "px"

    }
  ],
  "blocks": [
    {
      "type": "Scene",
      "name": "Scene",
      "settings": [
        {
          "type": "text",
          "id": "logo",
          "label": "Logo (SVG)"
        },
        {
          "type": "text",
          "id": "logo_active",
          "label": "Logo (SVG)",
          "info": "Different logo when active"
