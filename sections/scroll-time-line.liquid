          "label": "Logo Label"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "1024 x 1024px recommended"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Sub Title"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Découvrir les engagements"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button url"
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "Link label",
          "default": "Découvrir les engagements"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link url"
        }
      ]
    }
  ],
  "presets": [{
    "name": "Scroll Time Line",
    "category": "Image",
    "settings": {
    },
    "blocks": [

    ]
  }]
}
{% endschema %}
