/*VARIABLES*/

  $main-color: {{ settings.main_color }};

/*FONTS*/


  @font-face {
      font-family: 'Fashion Fetish';
      src: url('FashionFetish.eot');
      src: url('FashionFetish.eot?#iefix') format('embedded-opentype'),
          url('FashionFetish.woff2') format('woff2'),
          url('FashionFetish.woff') format('woff'),
          url('FashionFetish.ttf') format('truetype'),
          url('FashionFetish.svg#FashionFetish') format('svg');
      font-weight: normal;
      font-style: normal;
  }


  h1, h2, h3, h4, h5, h6 {
   font-family: 'Fashion Fetish' !important;
  }

  body, nav, a, span {
    font-family: 'Fashion Fetish' !important;
  }

/*GENERAL STYLES*/

  @media (min-width: 860px) {
    .custom-container {
      width:1000px;
      margin:0 auto;

    }

    .no-show {
      display: none;
    }
  }

/*FOOTER*/

  @media (min-width: 860px) {

    .mobile {
      display: none;
    }

    .footer {
      background-color: $main-color;

      a {
     color:white !important;
     font-weight: bold !important;
      }

      p {
       color:white !important;
       font-weight: bold !important;

      }
      h5 {
       color:white !important;
       font-weight: bold !important;

      }
      h6 {
        display: none;
      }

      .contact_email {
        background-color: transparent !important;
        border: 1px solid #ffffff !important;
        font-color: white !important;
      }

      #contact_form .action_button.sign_up {
        display: none !important;
      }

      .footer-columns {
        margin-bottom: 0px !important;
      }

      #footer-logo {
        height: 60%;
        width: 60%;
        display:flex;
      }

      .nl-first-block {
        display:flex;
        padding: 15px 0 0 0;
        justify-content: space-between;
      }

      .nl-title {
        margin-bottom: -20px;
      }

      .nl-subtitle {
        margin-bottom: -20px;
        font-size: 10px;
      }

      .newsletter_section {
        width: 400px;

        p {
          padding-top: 0px !important;
        }
      }

      .social_icons {
        display: flex !important;
        flex-direction: column;
        padding-top: 0px !important;
        margin-top: 0px !important;
      }

      .social-block ul, li {
        margin-bottom: 0px !important;

      }


      .one-third {
        width: calc(33.33333% - 52px);
      }

      .footer_credits {
        display: none;
      }

      .social_icons {
        a, p {
          margin-bottom: 5px !important;
        }
      }

      #email-input {
        position: relative;
        color: white;
        fill:white;
        font-color: white;
      }

      input[type="email"] {
        color: white;
        font-weight: bold;
      }

      input[type="email"]::placeholder {
        color:white;
      }

      .email-arrow {
        position: absolute;
        height: 20px;
        width: 20px;
        right: 10px;
        top: 12px;
        color: white;
        fill:white;
        font-color: white;
      }
    }
  }

  @media (max-width: 860px) {

    .desktop {
      display: none;
    }

    .footer {
      background-color: $main-color;

      a {
     color:white !important;
     font-weight: bold !important;
      }

      p {
       color:white !important;
       font-weight: bold !important;

      }
      h5, h6 {
       color:white !important;
       font-weight: bold !important;

      }

      #footer-logo {
        display: flex;
        justify-content: space-around;
        margin-bottom: 8px;
      }

      .contact_email {
        background-color: transparent !important;
        border: 1px solid #ffffff !important;
        font-color: white !important;
      }


      #email-input {
        position: relative;
        color: white;
        fill:white;
        font-color: white;
      }

      .email-arrow {
        position: absolute;
        height: 20px;
        width: 20px;
        right: 10px;
        top: 12px;
        color: white;
        fill:white;
        font-color: white;
      }

      .newsletter_section{
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        align-items: center;
        background-color: transparent !important;
        p {
            padding: 0px 0;
        }
      }

      .link-list-container {
        display:flex;
      }

      .footer_menu {
      }

      .footer_credits {
        display: none;
      }

      input[type="email"] {
        color: white;
        font-weight: bold;
      }

      input[type="email"]::placeholder {
        color:white;
      }

      #contact_form .action_button.sign_up {
          display: none !important;
        }
      }

      .title-subtitle {
        margin-top: 10px;

        p {
          font-size: 16px;
        }
      }

      .custom-container {
        position: relative;
        height: 500px;
      }

      .footer-1 {
        position: absolute;
        bottom: 0px;
        right: 0px;
      }

      .footer-3 {
        position: absolute;
        bottom: 0px;
        left: 0px;
      }
  }

/*HEADER*/



  .main_nav {
    display: flex;
    align-items: center;
    height: 100px;

    p, a {
      font-size: 10px !important;
    }
  }

  .nav {
    .cart_container {
      display:none;
    }
  }

  .separator {
    img {
      height: 40px
    }
  }

  .top_bar {
    display: none;
  }

  .cart_count {
    background-color: transparent;
  }

  .cart_container {
    a {
      height: 100% !important;
      padding-top: 8px;
    }
  }

  .new_cart_icon {
    height: 30px;
  }

  .mini_cart, .nav a.mini_cart {
    background-color: transparent;
  }

  .my-account {
    margin-right: 30px;

    a {
      font-size: 12px;
    }
  }

  #header .mobile_nav.dropdown_link span.menu_title {
      display: none;
  }

  .mobile_nav {
    div {
      span {
        background-color: $main-color;
      }
    }
  }

  @media (min-width: 860px) {

    .right-side-menu {
      font-size: 12px;
      display: flex;
      align-items: center;
      position: relative;
      width: 280px;
    }
    .right-side-menu {
      p {
        font-size: 12px !important;
      }
    }

    .cart_container {
      width: 100px;
    }
  }


  @media (max-width: 860px) {
    #header .top_bar{

      background-color: white;
      height: 70px;

      img {
        max-height: 100px !important;
        height: 40px;
      }

    }

    .cart_container {
      a {
        height: 100% !important;
        padding-top: 0px !important;
      }
      img {
        height: 30px !important;
      }

    }
  }


